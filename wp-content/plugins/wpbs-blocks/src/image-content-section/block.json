{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "wpbs-blocks/image-content-section",
	"version": "0.1.0",
	"title": "Image Content Block",
	"category": "wpbs-blocks",
	"icon": "layout",
	"description": "Block for creating different layouts of Image and content section.",
    "attributes": {
        "layout": { "type": "string", "default": "layout-one" },
        "title": { "type": "string", "default": "" },
        "content": { "type": "string", "default": "" },
        "imageUrl": { "type": "string", "default": "" },
        "showButtons": { "type": "boolean", "default": false },
        "buttons": {
            "type": "array",
            "default": [],
            "items": {
                "type": "object",
                "properties": {
                    "name": { "type": "string", "default": "" },
                    "url": { "type": "string", "default": "" },
                    "newTab": { "type": "boolean", "default": false },
                    "color": { "type": "string", "default": "#007cba" }
                }
            }
        }
    },
	"example": {},
	"supports": {
		"html": false
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php"
}